<div class="app-navbar">
  <div class="nav-logo">
    <%= link_to "MyBlogs",blogs_path ,class:"nav-logo-name"%>
  </div>
  <div class="nav-form">
    <%=form_with  url: search_path,method: :get do |f| %>
      <%=f.text_field :search,placeholder:"Search here",class:"nav-input" %>
      <%=f.submit "Search",class:"nav-submit" %>
    <%end%>
  </div>
  <div class="nav-links">
    <div class="dropdown">
      <button class="dropbtn nav-btn">Links</button>
      <div class="dropdown-content">
        <%= link_to "Import CSV file",bulkdata_path,class:"nav-link-csv"%>
        <%= link_to "Export CSV file",export_path(format: :csv),class:"nav-link-csv"%>
        <%= link_to "Create New Blog",new_blog_path,class:"nav-link-csv"%>
      </div>
    </div>
    <%= button_to "Sign Out",destroy_user_session_path,method: :delete,data:{ turbo_confirm:"are you sure?you want to logout"},class:"nav-btn nav-logout"%>
  </div>
</div>