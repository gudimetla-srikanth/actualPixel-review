<div class="signup">
  <div class="signup-container forgot-content">
    <h2 class="device-heading">CHANGE YOUR PASSWORD</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
      <div class="signup-input-block">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password",class:"signup-field" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"signup-field" %>
        <% if resource.errors.any? %>
        <p class="resource-err password-edit">Password should be a mixed letters & can not be blank</p>
        <%end%>
        <%= f.submit "Change my password",class:"signup-field signup-btn"%>
    <% end %>
      </div>
      <div class="device-shared">
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
