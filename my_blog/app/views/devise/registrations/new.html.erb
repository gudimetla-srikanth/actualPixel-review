<div class="signup">
  <div class="signup-container">
    <h2>SIGNUP</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource%>
      <div class="signup-input-block">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Email",class:"signup-field"%>
        <%= f.password_field :password, autocomplete: "new-password",placeholder:"Password",class:"signup-field" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"Confirm Password",class:"signup-field" %>
        <%= f.submit "Sign up",class:"signup-field signup-btn"%>
      <% end %>
      </div>
      <div class="device-shared">
        <%= render "devise/shared/links"%>
      </div>
  </div>
</div>

