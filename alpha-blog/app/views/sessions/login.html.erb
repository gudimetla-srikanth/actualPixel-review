
<div class="container p-3 mt-1 rounded">
  <%= form_with scope: :user,url: '/login',local: true do |form| %>
    <div class="container mt-5 text-center bg-info p-2 d-flex flex-column rounded">
      <div class="d-flex my-1 justify-content-between">
        <div>
          <h3><%= form.label :email %></h3>
        </div>
        <div class="w-75">
          <%= form.email_field :email,class: "border border-0 py-2 rounded w-100 px-2" %>
        </div>
      </div>
      <div class="d-flex my-1 justify-content-between">
        <div>
          <h3><%= form.label :password%></h3>
        </div>
        <div class="w-75">
          <%= form.text_field :password,class:"border border-0 py-2 rounded w-100 px-2" %>
        </div>
      </div>
      <br>
      <div>
         <%= form.submit "Login",class: "w-50 btn btn-warning" %>
      </div>
    </div>
  <%end%>
</div>