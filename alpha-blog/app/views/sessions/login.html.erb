
<div class="container p-3 mt-1">
  <%= form_with scope: :user,url: '/login',local: true do |form| %>
    <div class="container mt-5 text-center">
      <h2>Login using your account!</h2>
      <div><h3><%= form.label :email %></h3></div>
      <div><%= form.email_field :email,class: "w-50 border border-0 py-2 rounded" %></div>
      <div><h3><%= form.label :password%></h3></div>
      <div><%= form.text_field :password,class:"w-50 border border-0 py-2 rounded" %></div>
      <br>
      <div> <%= form.submit "Login",class: "w-50 btn btn-success" %></div>
    </div>
  <%end%>
</div>