<div class=" mt-5 d-flex justify-content-center">
  <div class="w-50 bg-dark py-3 rounded">
    <h1 class="display-4 text-primary text-center"><%= @category.name%></h1>
    <div class="d-flex justify-content-center">
      <% if login && current_user.admin %>
        <p><%= link_to "Edit", edit_category_path(@category),class: "btn btn-outline-warning px-3 mx-1" %></p>
        <p><%= button_to "Delete", category_path(@category),method: :delete,class: "btn btn-outline-danger px-3 mx-1" %></p>
      <%end%>
    </div>
  </div>
</div>
<div class="container text-center my-2"><%= link_to "[Cancel and Return back to categories]",categories_path %></div>