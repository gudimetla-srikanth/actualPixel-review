
<div class="container text-center my-3">
  <h2 class="font-weight-bold">categories</h2>
</div>
<div class="flickr_pagination mt-3">
  <%= will_paginate @category, :container => false %>
</div>
<% @category.each do |category| %>
<div class="d-flex justify-content-center">
  <div class="w-50">
    <div class="container my-2">
      <div class="card text-center">
        <div class="card-body">
          <h5 class="card-title text-success">
            <%= category.name%>
          </h5>
        </div>
        <p>
          <div class="d-flex justify-content-center">
            <% if login && current_user.admin %>
              <div>
                <%= link_to "Show",category_path(category),class: "btn btn-outline-success m-1" %>
              </div>  
              <div>
                <%= link_to "Edit",edit_category_path(category),class: "btn btn-outline-warning m-1" %>
              </div>  
            <%end%>
        </div>
        </p>
        <div class="card-footer text-muted">
          created <%= time_ago_in_words(category.created_at) %> ago, updated <%= time_ago_in_words(category.updated_at) %> ago
        </div>
      </div>
    </div>
  </div>
</div>
<%end%>