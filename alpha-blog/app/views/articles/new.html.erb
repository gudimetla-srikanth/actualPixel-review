
<div class="my-5 mx-5 text-center border border-primary">
  <%= form_with scope: :article,url: articles_path,method: :post,local: true do |f| %>
    <p>
      <%= f.label :title ,class: "my-2 font-weight-bold"%>
    </p>
    <p>
      <%= f.text_field :title , class: "w-50" %>
    </p>
    <p>
      <%= f.label :description ,class: "font-weight-bold"%>
    </p>
    <p>
      <%= f.text_area :description , class: "w-50" %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>