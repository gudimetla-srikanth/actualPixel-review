<div class=" mt-5 d-flex justify-content-center">
  <div class="w-50 bg-dark py-3 rounded">
    <h1 class="display-4 text-primary text-center"><%= @article.title%></h1>
    <p class="lead text-white text-center"><%= @article.description%></p>
    <div class="d-flex justify-content-center">
      <%if login && @article.user_id == current_user.id %>
        <p><%= link_to "Edit", edit_article_path(@article),class: "btn btn-outline-warning px-3 mx-1" %></p>
        <p><%= button_to "Delete", article_path(@article),method: :delete,class: "btn btn-outline-danger px-3 mx-1" %></p>
      <%end%>
    </div>
  </div>
</div>
<div class="container text-center my-2"><%= link_to "[Cancel and Return back to articles]",articles_path %></div>

