<div class="container">
<h1>My Portfolio</h1>
<div class="search-area mt-5">
  <h3>Search Stocks</h3>
  <%=form_tag 'search_stock',method: :get do %>
  <div class="form-group row">
    <div class="col-sm-9">
      <%=text_field_tag :stock,params[:stock],placeholder:"Enter stock Price",autofocus: true,class: "form-control form-control-lg"%>
    </div>
    <div class="col-sm-3">
      <%=button_tag type: :submit,class:"btn btn-success" do %>
      <%= fa_icon "search 2x" %>
      <%end%>
    </div>
  </div>
  <%end%>
</div>
<% if @stock.present? %>
<div class="card mt-3 w-50">
  <div class="card-header">
    <strong>Symbol</strong> : <%= @stock[:ticker] %> | <strong>company</strong> : <%= @stock[:company] %> | <strong>Price</strong> : <%= @stock[:last_price] %>
  </div>
  </div>
</div>
<%end%>
</div>