<div class="container mt-5">
<h1>My Portfolio</h1>
<div class="search-area mt-3">
  <h3>Search Stocks</h3>
  <%=form_tag search_stock_path,method: :get do %>
  <div class="form-group row">
    <div class="col-sm-9">
      <%=text_field_tag :stock,params[:stock],placeholder:"Enter stock Price",autofocus: true,class: "form-control form-control-lg"%>
    </div>
    <div class="col-sm-3">
      <%=button_tag type: :submit,class:"btn btn-success" do %>
      <%= fa_icon "search 2x" %>
      <%end%>
    </div>
  </div>
  <%end%>
</div>
<div class="mt-2 mb-2">
  <div class="row">
    <div class="col-9">
      <%= render "users/stockdatatag" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-9">
    <%= render "users/trackedstockstable" %>
  </div>
</div>
</div>