<div class="container">
  <h1>My Friends</h1>
  <div class="search-area mt-5">
    <h3>Search friends</h3>
    <%=form_tag  search_user_path,method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9">
        <%=text_field_tag :friend_string,params[:friend_string],placeholder:"Enter a search string to fetch users",autofocus: true,class: "form-control form-control-lg"%>
      </div>
      <div class="col-sm-3">
        <%=button_tag type: :submit,class:"btn btn-success" do %>
        <%= fa_icon "search 2x" %>
        <%end%>
      </div>
    </div>
    <%end%>
  </div>
  <div class="mt-2 mb-2">
    <div class="row">
      <div class="col-9">
        <%= render "friendships/frienddatatag" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-9">
      <%= render "friendships/friendsdatatable" %>
    </div>
  </div>
  </div>